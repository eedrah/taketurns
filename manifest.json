{
  "name": "Take Turns",
  "description": "Raise your hand if you want to speak",
  "app": {
    "script": [ "freedom/main.js" ],
    "index": "index.html",
    "static": [ 
      "css/main.css"
    ]
  },
  "dependencies": {
    "socialprovider": {
      "url": "bower_components/freedom/providers/social/websocket-server/social.ws.json",
      "api": "social"
    }
  },
  "provides": ["taketurns"],
  "default": "taketurns",
  "api": {
    "taketurns": {
      "constructor": { "value": ["string", "string"] },
      "addToQueue": { "type": "method", "value": [] },
      "removeFromQueue": { "type": "method" , "value": [] },
      "onQueue": { "type": "event", "value": [ { "name": "string" } ] },
      "onState": {"type": "event", "value": {
        "name": "string",
        "status": "string"
      }}
    }
  }
}
